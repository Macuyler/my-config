#!/usr/bin/env python3

import sys, os

def setup(option):
    global_files = os.popen('ls -p dotfiles | grep -v /').read().strip().split('\n')
    local_files = os.popen(f'ls -p dotfiles/{option} | grep -v /').read().strip().split('\n')
    for g in global_files:
        os.system(f'cp dotfiles/{g} ~/.{g}')
    for l in local_files:
        os.system(f'cp dotfiles/{option}/{l} ~/.{l}')
    return

def main():
    if len(sys.argv) != 2:
        print('Usage:\n setup-config name-of-os')
    else:
        _, option = sys.argv
        OSs = set(map(lambda x: x.split('/')[1], os.popen('ls -d dotfiles/*/').read().strip().split('\n')))
        if option.lower() in OSs:
            setup(option.lower())
        else:
            print(' * Invalid Operation System!')
            print('Valid Options:')
            for o in OSs:
                print(f'  - {o}')
    return

if __name__ == '__main__':
    main()

