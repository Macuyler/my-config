#!/bin/bash

# ==============================================
# Mount the a local CTF nfs shared volume on mac
# Use -l for ctf.local or blank for ctf hostname
# ==============================================

if [[ "$1" == '-l' ]]
then
	defaults write com.apple.desktopservices DSDontWriteNetworkStores true
	sudo mount -t nfs -o resvport,rw ctf.local:/home/macuyler/CTF ~/CTF
else
	defaults write com.apple.desktopservices DSDontWriteNetworkStores true
	sudo mount -t nfs -o resvport,rw ctf:/home/macuyler/CTF ~/CTF
fi
