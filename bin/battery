#!/bin/bash

UNAME=$(uname -s)
BAT_PATH=/sys/class/power_supply/BAT0
CHARGING="âš¡"
BATTERY="ðŸ”‹"


output() {
	pct=$1
	status=$2
	arg=$3
	if [ "$arg" = "%" ]; then
		echo "$pct%"
	elif [ "$arg" = "@" ]; then
		echo "$status"
	else
		echo "$status $pct%"
	fi
}


get_linux_battery() {
	status_txt=$(cat $BAT_PATH/status_txt)
	full=$(cat $BAT_PATH/energy_full)
	now=$(cat $BAT_PATH/energy_now)
	pct=$(100 * now / full)
	[[[ "$status_txt" = "Full" ]] -o [[ "$status_txt" = "Charging" ]]] && status="$CHARGING"
	[[ "$status_txt" = "Discharging" ]] && status="$BATTERY"
	output $pct $status $1
}


get_mac_battery() {
	BAT=$(pmset -g batt)
	status_line=$(echo "$BAT" | head -n 1)
	pct_line=$(echo "$BAT" | tail -n 1)
	pct=$(echo "$pct_line" | cut -d'%' -f1 | rev | cut -f1 | rev)
	[[ "$status_line" == *"AC Power"* ]] && status="$CHARGING"
	[[ "$status_line" == *"Battery Power"* ]] && status="$BATTERY"
	output $pct $status $1
}


if [ "$UNAME" = "Linux" ]; then
	[ -d $BAT_PATH ] && \
		get_linux_battery $1
elif [ "$UNAME" = "Darwin" ]; then
	get_mac_battery $1
fi

